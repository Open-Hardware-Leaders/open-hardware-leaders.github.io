.section{
  &--grey{
    background-color:#cecece;
  } 
  .container{
    
    max-width:1000px;

    &--centered{
      margin: 0 auto;  
    }

    &--top-padding{
      padding-top:5em;
    }
  
  }



  &--inverted{
    background-color:#21606F;
    p,h1,h2,h3,h4,div{
      color: #f7f7f7;
    }
    p{
      font-weight: 100;
    }
  .icon{
    color:#C6C6C6;
    }
     

  }
  
}

.footer-2{
  padding-top:3em;
  padding-bottom:2em;
  background-color:#322e20;
    p,h1,h2,h3,h4, ol, li{
      color: #C6C6C6;
    }
    p{
      font-weight: 100;
    }

    // height:300px;

    ul{
       font-weight: 300;
      .list-title{
          font-weight: 400;
      }
    }

    li{
      font-weight:100;
    }

    .container{
      max-width:70%;  
    }
  
}





